<!DOCTYPE html>
<html>
    <head>
        <title>My Fortnite Coach</title>
        <link rel="stylesheet" href="../public/css/index.css" />
        <script src="//code.jquery.com/jquery-2.2.0.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    </head>

    <body>
        <div class="wrap">
            <div class="box">
                <div class="flex actions">
                    <button id="login" class="active">J'ai un compte</button>
                    <button id="join">Je m'inscris</button>
                </div>
                
                <div class="form">
                    <form method="post" action="/login" class="form" method="post">
                        <label for="username">Email</label>
                        <input type="text" id="username" name="username" />
    
                        <label for="username">Password</label>
                        <input type="password" name="password" />
                    
                        <div class="flex buttons">
                            <div>
                                <input type="checkbox" name="remember" /> Remember me
                            </div>
                            <div>
                                <button class="submit" type="submit">Sign in</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
            /* TODO Convert Ajax in NodeJs */
            $('.actions button').click(function() {
                if($(this).attr('id') != 'login' && $(this).attr('id') != 'join') {
                    return;
                }

                if(!$(this).hasClass('active')) {
                    $('.actions button').toggleClass('active');
                    
                    $.ajax({
                        url : $(this).attr('id'),
                        type : 'GET',
                        success : function(page) {
                            $('.form').html(page);
                        }
                    });
                }
            });
        </script>
    </body>
</html>