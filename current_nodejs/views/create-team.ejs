<!DOCTYPE html>
<html>
    <head>
        <title>My Fortnite Coach</title>
        <link rel="stylesheet" href="/public/css/global.css" />
        <link rel="stylesheet" href="/public/css/member-area.css" />
        <link rel="stylesheet" href="/public/css/slick.css" />
        <link rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/css/tether.min.css' />
        <link rel="stylesheet" href='/public/css/selectize.css' />
        <link rel="stylesheet" href="/public/css/alert.css" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
        <link rel="icon" type="image/x-icon" href="/public/img/favicon.png">

        <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    </head>

    <body>
        <div class="wrap">
            <!-- NAVIGATION -->
            <%- include partials/header.ejs %>
            <!-- NAVIGATION -->

            <div class="box-container">
                <div class="box">
                    <h2>Create a team: </h2>

                    <form method="post" action="/create-team">
                        <label for="name">Team name:</label>
                        <input type="text" name="name" id="name" class="input" />

                        <div class="radio">
                            <p>Select an offer:</p>

                            <div class="bronze">
                                <input type="radio" id="bronze" name="nbmembers" value="1" />
                                <label for="bronze">Bronze (1 to 5 members)</label>
                            </div>
                            
                            <div class="silver">
                                <input type="radio" id="silver" name="nbmembers" value="2" />
                                <label for="silver">Silver (5 to 10 members)</label>
                            </div>
    
                            <div class="gold">
                                <input type="radio" id="gold" name="nbmembers" value="3" />
                                <label for="gold">Gold (10+ members)</label>
                            </div>
                        </div>

                        <button type="submit" class="button">Create your team</button>
                    </form>
                </div>
            </div>

            <script src="/public/js/custom/create-team.min.js"></script>
            <script src="/public/js/custom/alert.min.js"></script>
            <script src="/public/js/custom/autocomplete.js"></script>
    </body>
</html>